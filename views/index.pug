extends layout

block content
  //Modal
  #templatemo_search.modal.fade.bg-white(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
      .w-100.pt-1.mb-5.text-right
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      form.modal-content.modal-body.border-0.p-0(action='' method='get')
        .input-group.mb-2
          input#inputModalSearch.form-control(type='text' name='q' placeholder='Search ...')
          button.input-group-text.bg-success.text-light(type='submit')
            i.fa.fa-fw.fa-search.text-white

  //Banner
  #template-mo-zay-hero-carousel.carousel.slide(data-bs-ride='carousel')
    ol.carousel-indicators
      li.active(data-bs-target='#template-mo-zay-hero-carousel' data-bs-slide-to='0')
      li(data-bs-target='#template-mo-zay-hero-carousel' data-bs-slide-to='1')
      li(data-bs-target='#template-mo-zay-hero-carousel' data-bs-slide-to='2')
    .carousel-inner
      .carousel-item.active
        .container
          .row.p-5
            .mx-auto.col-md-8.col-lg-6.order-lg-last
              img.img-fluid(src='images/banner_img_01.jpg' alt='')
            .col-lg-6.mb-0.d-flex.align-items-center
              .text-align-left.align-self-center
                h1.h1.text-success
                  b Zay
                  |  eCommerce
                h3.h2 Tiny and Perfect eCommerce Template
                p
                  | Zay Shop is an eCommerce HTML5 CSS template with latest version of Bootstrap 5 (beta 1). 
                  | This template is 100% free provided by 
                  a.text-success(rel='sponsored' href='https://templatemo.com' target='_blank') TemplateMo
                  |  website. 
                  |                                     Image credits go to 
                  a.text-success(rel='sponsored' href='https://stories.freepik.com/' target='_blank') Freepik Stories
                  | ,
                  a.text-success(rel='sponsored' href='https://unsplash.com/' target='_blank') Unsplash
                  |  and
                  a.text-success(rel='sponsored' href='https://icons8.com/' target='_blank') Icons 8
                  | .
      .carousel-item
        .container
          .row.p-5
            .mx-auto.col-md-8.col-lg-6.order-lg-last
              img.img-fluid(src='images/banner_img_02.jpg' alt='')
            .col-lg-6.mb-0.d-flex.align-items-center
              .text-align-left
                h1.h1 Proident occaecat
                h3.h2 Aliquip ex ea commodo consequat
                p
                  | You are permitted to use this Zay CSS template for your commercial websites. 
                  | You are 
                  strong not permitted
                  |  to re-distribute the template ZIP file in any kind of template collection websites.
      .carousel-item
        .container
          .row.p-5
            .mx-auto.col-md-8.col-lg-6.order-lg-last
              img.img-fluid(src='images/banner_img_03.jpg' alt='')
            .col-lg-6.mb-0.d-flex.align-items-center
              .text-align-left
                h1.h1 Repr in voluptate
                h3.h2 Ullamco laboris nisi ut 
                p
                  | We bring you 100% free CSS templates for your websites.
                  | If you wish to support TemplateMo, please make a small contribution via PayPal or tell your friends about our website. Thank you.
    a.carousel-control-prev.text-decoration-none.w-auto.ps-3(href='#template-mo-zay-hero-carousel' role='button' data-bs-slide='prev')
      i.fas.fa-chevron-left
    a.carousel-control-next.text-decoration-none.w-auto.pe-3(href='#template-mo-zay-hero-carousel' role='button' data-bs-slide='next')
      i.fas.fa-chevron-right
  
  //Cate of the month
  section.container.py-5
    .row.text-center.pt-3
      .col-lg-6.m-auto
        h1.h1 Categories of The Month
        p
          | Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia
          | deserunt mollit anim id est laborum.
    .row
      .col-12.col-md-4.p-5.mt-3
        a(href='#')
          img.rounded-circle.img-fluid.border(src='images/a.jpg')
        h5.text-center.mt-3.mb-3 Watches
        p.text-center
          a.btn.btn-success Go Shop
      .col-12.col-md-4.p-5.mt-3
        a(href='#')
          img.rounded-circle.img-fluid.border(src='images/category_img_02.jpg')
        h2.h5.text-center.mt-3.mb-3 Shoes
        p.text-center
          a.btn.btn-success Go Shop
      .col-12.col-md-4.p-5.mt-3
        a(href='#')
          img.rounded-circle.img-fluid.border(src='images/category_img_03.jpg')
        h2.h5.text-center.mt-3.mb-3 Accessories
        p.text-center
          a.btn.btn-success Go Shop
